<!DOCTYPE html>
<html lang="en">
  <%- include('../../layouts/header.ejs') %>
  <body>

    <%- include('../../layouts/navigation.ejs') %>

    <div class="min-h-full mx-10">
        <div class="flex-between">
          <div>
            <h1>DESTINATIONS</h1>
          </div>
          <div class="btn-create" onclick="openCreateModal()">
            Create
          </div>
        </div>
        <table class="rwd-table ">
          <tbody>
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Location</th>
              <th>Description</th>
              <th>Price</th>
              <th>Promo</th>
              <th>Action</th>
            </tr>
            <% data.forEach(value => { %>
              <tr>
                <td data-th="Supplier Code">
                  <%= value.id  %>
                </td>
                <td data-th="Supplier Name">
                  <%= value.title  %>
                </td>
                <td data-th="Invoice Number">
                  <%= value.location  %>
                </td>
                <td data-th="Invoice Date">
                  <%= value.description  %>
                </td>
                <td data-th="Due Date">
                  <%= value.price  %>
                </td>
                <td data-th="Net Amount">
                  <%= value.promo  %>
                </td>
                <td data-th="Net Amount">
                  <div class="flex gap-1">
                    <div>
                      Edit
                    </div>
                    <div>
                      Delete
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
    </div>

    <div id="createModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeCreateModal()">&times;</span>
          <form id="createForm" method="POST" action="/destination/create" enctype="multipart/form-data">
            <div>
              <label for="createTitle">Title</label>
              <input type="text" placeholder="Title" id="createTitle" name="createTitle">
            </div>
            <div>
              <label for="createLocation">Location</label>
              <input type="text" placeholder="Location" id="createLocation" name="createLocation">
            </div>
            <div>
              <label for="createDescription">Description</label>
              <input type="text" placeholder="Description" id="createDescription" name="createDescription">
            </div>
            <div>
              <label for="createPrice">Price</label>
              <input type="text" placeholder="Price" id="createPrice" name="createPrice">
            </div>
            <div>
              <label for="createPromo">Promo</label>
              <input type="text" placeholder="Promo" id="createPromo" name="createPromo">
            </div>
            <div>
              <label for="createImage">Image</label>
              <input type="file" id="createImage" name="createImage">
            </div>
            <button type="submit">Submit</button>
          </form>

      </div>
    </div>

    <%- include('../../layouts/footer.ejs') %>
  </body>
</html>

<script>
function openCreateModal() {
  var createModal = document.getElementById("createModal");
  createModal.style.display = "flex";
}

function closeCreateModal() {
  var createModal = document.getElementById("createModal");
  createModal.style.display = "none";
}

</script>

<style>
.modal {
  display: none;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99999; 
}


.modal-content {
  background: white;
  padding: 30px;
  position: relative;
  margin: auto; 
}


.close {
  position: absolute;
  top: 0;
  right: 0;
  margin: 10px;
  background-color: red;
  width: 20px;
  height: 20px;
  font-size: 20px;
  display: flex; 
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 800;
  cursor: pointer; 
  border-radius: 100%;
}

</style>




